from pwn import *
import sys
import os
import zlib

#flag = open('fl4g.jpg','wb')
key = "CSA"
host = '52.28.255.56'
port =  1080
s = remote(host,port)

while True:
    try:

        s.send("\x5a\x01\xfe\xdd\x74\x9c\x2e")
        r = s.recv()
        re = r.encode('hex')
        chary = r[2]
        toXor = r[3:6]

        o = ''
        index = 0
        for item in toXor:
            o += chr(ord(item) ^ ord(key[index]))
            index = (index + 1) % len(key)
        print "server respone : " + re
        print "Toxor : "+ toXor.encode('hex')
        print "Xored with CSA : "+ o.encode('hex')
        print "magic byte : " + chary.encode('hex')

        toCheck =b"\x5a"+chary+o
        checksum =  hex(zlib.crc32(toCheck) & 0xffffffff)
        def checksumy():
            s = checksum[2:]
            o = []
            while s:
                o.append(s[:2])
                s = s[2:]
            cheky = ''
            for i in o:
                cheky += chr(int("0x{}".format(i), 16))
            #print cheky
            return cheky

        s.send("\x5a" + chary + o +checksumy())
        s.send("\x5a\x01\x00\x01\xc0\xa8\xad\x14\x00\x50\x62\x4A\x30\x63")

        print s.recv()
        s.send(''.decode('hex'))
        while True:
            #flag.write(s.recv())
            print "PAAAAAAAAAAAAAACKKKKKKKKKKKKEGGGGGGGGGGEEEEEEEEE    : " + s.recv()
    except EOFError as error:
        print(error)
        exit()
